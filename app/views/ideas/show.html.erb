


<div class="row">
  <div class="col-md-9">
   <%= image_tag(@idea.picture_url(:thumb)) if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-warning" %> |
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %> |
      <%= link_to 'Back', ideas_path, class: "btn btn-info" %>
   </p>
  </div>
</div>
<h3>Comments</h3>
    <% @comments.each do |comment| %>
    <hr>
    <div class="row" class="table">
      <div class ="col-md-3">  <%= image_tag(comment.picture_url, width: "50") if comment.picture.present? %> </div>
      <div class="col-md-3">
        <strong><%= comment.user_name %></strong>
      </div>
      <div class="col-md-3"><%= comment.body %></div>
      
      <%= link_to 'Delete', comment_path(comment), method: :delete, class: "col-md-1 btn btn-danger", data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
  
  
   
<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
  Comments
</button>
<div class="collapse" id="collapseExample">
  <div class="well">
    <%= render 'comments/form' %>
  </div>
</div>
   
